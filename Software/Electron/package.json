{
  "name": "direction-finding-control",
  "version": "1.0.0",
  "description": "Direction Finding Control Application",
  "main": "main.js",
  "scripts": {
    "start": "webpack && electron .",
    "dev": "concurrently \"webpack --watch\" \"wait-on dist/index.html && electron .\"",
    "build": "webpack --mode production && electron-builder --win --x64"
  },
  "keywords": [
    "electron",
    "direction-finding"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.1",
    "css-loader": "^7.1.2",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "electron-reload": "^2.0.0-alpha.1",
    "html-webpack-plugin": "^5.6.5",
    "style-loader": "^4.0.0",
    "wait-on": "^9.0.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "build": {
    "appId": "com.directionfinding.control",
    "productName": "DirectionFindingControl",
    "directories": {
      "output": "publish"
    },
    "win": {
      "target": "dir",
      "signAndEditExecutable": false
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!node_modules/electron-reload",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  },
  "dependencies": {
    "@mantine/core": "^8.3.10",
    "@mantine/hooks": "^8.3.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  }
}
